% Takes 4 arguments% Returns the updated weight, distance value and the index of that distance% valuefunction [updated_weight,distance_value,distance_index] = nn (input, weight, output,learning_rate)  updated_weight = weight; % Setting final weight to initial weight  p = 1;           % p is a index counter variable   [row,size_output] = size(weight); %determining the size of the weight  d = rand(1,size_output); % randomizing a 1xsize_output vector to find the minimum  while p <= size_output % When the size of counter is less than or equal to ouput size    d(1,p) = sum(( input - weight(p,:)).^2); %finding the distance    p = p + 1;  end  [val, ind] = min(d); % finding the index of the minimum between d1, d2, ..., dn  distance_value = val;  distance_index = ind;  updated_weight(ind, :) = array2table(table2array(weight(ind,:)) + learning_rate * (table2array(input) - table2array(weight(ind, :)))); %updating the weight matrix according to the minimum d  end